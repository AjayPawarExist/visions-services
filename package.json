{
  "name": "techvision-monorepo",
  "version": "1.0.0",
  "description": "TechVision - Next-Gen SaaS Platform (Frontend + API)",
  "private": true,
  "workspaces": [
    "api"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:api\" --names \"NEXT,API\" --prefix-colors \"cyan,yellow\"",
    "dev:next": "next dev",
    "dev:api": "npm run start --workspace=api",
    "build": "npm run build:next && npm run build:api",
    "build:next": "next build",
    "build:api": "npm run build --workspace=api",
    "start": "npm run start:next && npm run start:api",
    "start:next": "next start",
    "start:api": "npm run start --workspace=api",
    "lint": "next lint",
    "clean": "npm run clean:next && npm run clean:api",
    "clean:next": "rm -rf .next out",
    "clean:api": "rm -rf api/dist",
    "clean:all": "npm run clean && rm -rf node_modules api/node_modules",
    "setup": "npm install && npm run build:api",
    "prod": "npm run build && npm run start",
    "test": "npm run test --workspaces --if-present",
    "postinstall": "npm run build:api"
  },
  "dependencies": {
    "@react-three/drei": "^9.108.3",
    "@react-three/fiber": "^8.16.8",
    "bcryptjs": "^3.0.2",
    "framer-motion": "^11.3.19",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.408.0",
    "next": "^14.2.33",
    "pg": "^8.16.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-intersection-observer": "^9.13.0",
    "three": "^0.166.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.11",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/three": "^0.166.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.5",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.6",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
